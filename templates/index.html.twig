{% extends 'base.html.twig' %}

{% block title %}{{titulo}}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 px-3">
        <h2>Clientes</h2>
    </div>
    <div class="col-md-6 px-3 text-end">
        <a class="btn btn-primary" href="/novo" role="button">Novo cliente</a>
    </div>
    <div class="col-md-12">
        {% if clientes %}
            <table class="table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Nascimento</th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                
                
                {% for cliente in clientes %}
                <tr>
                <th scope="row">{{cliente.id}}</th>
                <td>{{cliente.nome}}</td>
                <td>{{ cliente.getDtNasc()| date('d/m/Y') }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Opções de ações">
                        <a class="btn btn-outline-primary" href="/editar/{{cliente.id}}" role="button">Editar</a>
                        <a class="btn btn-danger" onclick="return confirm('Deseja remover o cliente {{cliente.nome}}?')" href="/remover/{{cliente.id}}" role="button">Remover</a>
                    </div>
                </td>
                </tr>
                {% endfor %}
            </tbody>
            </table>

        {% else %}

            <h4 style="color:gray;text-align:center;">Nenhum cliente cadastrado</h4>

        {% endif %}
    </div>
</div>
{% endblock %}
